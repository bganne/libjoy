libjoy$=SPACE$(156)
joy%=VARPTR(libjoy$)
BLOAD "LIBJOY.INL",joy%
DO
  val%=@joy3
  PRINT "joy3";BIN$(val%,8)
  val%=@joy4
  PRINT "joy4";BIN$(val%,8)
LOOP
FUNCTION joy3
  super%=GEMDOS(&H20,L:0)
  v%=C:joy%()
  ~GEMDOS(&H20,L:super%)
  RETURN v%
ENDFUNC
FUNCTION joy4
  super%=GEMDOS(&H20,L:0)
  addr%=joy%+&H54
  v%=C:addr%()
  ~GEMDOS(&H20,L:super%)
  RETURN v%
ENDFUNC
